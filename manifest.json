{
    "manifest_version": 3,
    "name": "Color Picker",
    "version": "1.0",
    "description": "Pick colors from any webpage.",
    "author": "Etharialle",
    "permissions": ["activeTab", "scripting"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "scripts/background.js"
    },
    "host_permissions": ["<all_urls>"]
  }
  